<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#BBC0FF"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="&#8942;"
        android:textSize="20sp"
        android:id="@+id/txt_option"
        android:layout_gravity="right"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/tampilan_gambar"
            android:layout_width="146dp"
            android:layout_height="97dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/charlie_puth" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/no_pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 1"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/secular_one"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/jawaban_pertanyaan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban:"
                android:textColor="#4F4F4F"
                android:fontFamily="@font/secular_one"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>